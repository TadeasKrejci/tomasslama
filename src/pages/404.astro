---
import { Icon } from "astro-icon";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Button from "@components/ui/button.astro";
import Contactform from "@components/contactform.astro";
---

<Layout title="404 Not Found">

    <section class="page_404">
      <div class="">
        <div class="row">
          <div class="col-sm-12 ">
            <div class="col-sm-10 col-sm-offset-1  text-center">
              <div class="four_zero_four_bg">
                <h1 class="text-center">404</h1>


              </div>

              <div class="contant_box_404">
                <h3 class="h2">
                  Vypadá to, že jste se ztratili.
                </h3>

                <p>Nevadí, stačí kliknout na tlačítko a vrátíte se zptáky domů.</p>

                <a href="/" class="link_404">Zpátky domů</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
</Layout>



<style>


    .page_404{ padding:40px 0; background:#fff; font-family: 'Ubuntu', serif;
    }

    .page_404  img{ width:100%;}

    .four_zero_four_bg{

        background-image: url(https://cdn.dribbble.com/users/285475/screenshots/2083086/dribbble_1.gif);
        height: 600px;
        background-position: center;
        background-repeat: no-repeat;
    }


    .four_zero_four_bg h1{
        font-size:120px;
    }

    .four_zero_four_bg h3{
        font-size:80px;
    }

    .link_404{
        color: #fff!important;
        padding: 10px 20px;
        background: #bb0000;
        margin: 20px 0;
        display: inline-block;}
    .contant_box_404{ margin-top:-150px;}
</style>