---
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "Domů",
    path: "#hero",
  },
  {
    title: "Služby",
    path: "#sluzby",
  },
  {
    title: "Reference",
    path: "#reference",
  },
  {
    title: "Jak to probíhá?",
    path: "#prubeh",
  },
  {
    title: "Kontakt",
    path: "#kontakt",
  },
];
---
<div class="backdrop-blur w-full z-50 bg-white/90 fixed top-0">
<div class="container w-full mx-auto relative">
  <header
    class="flex container mx-auto py-5 w-full flex-col lg:flex-row justify-between items-center">
    <Astronav>
      <div class="flex items-center justify-between">
        <a href="/" class="text-lg flex items-center">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="50"
            height="auto"
            viewBox="0 0 73.682 68.001">
            <g
              id="Group_60"
              data-name="Group 60"
              transform="translate(-7745.813 598.668)">
              <path
                id="Path_52"
                data-name="Path 52"
                d="M57.592,42.035a3.748,3.748,0,0,1,6.5,0L92.042,90.58A3.748,3.748,0,0,1,88.794,96.2H32.886a3.748,3.748,0,0,1-3.248-5.618Z"
                transform="matrix(-0.978, -0.208, 0.208, -0.978, 7827.989, -485.33)"
                fill="#c70000"></path>
              <path
                id="Path_53"
                data-name="Path 53"
                d="M37.371-22.949A13.291,13.291,0,0,1,32.36-11.976Q27.348-7.967,18.415-7.967a32.749,32.749,0,0,1-14.56-3.095V-21.191a60,60,0,0,0,8.81,3.271,26.069,26.069,0,0,0,6.594.95,9.376,9.376,0,0,0,5.5-1.372,4.691,4.691,0,0,0,1.917-4.08,4.5,4.5,0,0,0-.844-2.69,9.445,9.445,0,0,0-2.479-2.268,63.768,63.768,0,0,0-6.665-3.482,31.588,31.588,0,0,1-7.069-4.255A15.975,15.975,0,0,1,5.86-39.865,13.549,13.549,0,0,1,4.453-46.2q0-6.823,4.625-10.727t12.784-3.9a30.188,30.188,0,0,1,7.649.95A52.579,52.579,0,0,1,37.125-57.2l-3.517,8.476A51.456,51.456,0,0,0,26.8-51.084a21.9,21.9,0,0,0-5.293-.668,7.009,7.009,0,0,0-4.748,1.442,4.756,4.756,0,0,0-1.653,3.763,4.657,4.657,0,0,0,.668,2.515,7.347,7.347,0,0,0,2.128,2.075,65.788,65.788,0,0,0,6.911,3.6q7.21,3.447,9.882,6.911A13.487,13.487,0,0,1,37.371-22.949Z"
                transform="translate(7763.254 -535.299)"
                fill="#fff"></path>
            </g>
          </svg>

          <span class="text-black text-2xl font-light pl-2 pr-1">TOMÁŠ</span
          ><span class="text-black text-2xl font-bold">SLÁMA</span>
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-black" />
        </div>
      </div>
      <MenuItems
        class="hidden-lg shadow md:shadow-none w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3 items-end">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}

                {!item.children && (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-2 lg:mx-2 py-2 font-medium text-black  hover:text-[#C70000] duration-100 hover:border-b-2  border-[#C70000]">
                      {item.title}
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
      </MenuItems>
    </Astronav>
  </header>
</div>
</div>
